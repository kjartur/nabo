<div class="card-product-two">
  <%= link_to task_offer_path(@tasks, @offers) do %>
  <div class="card-product-infos">
    <h2><%= offer.task.title %></h2>
    <p><%= offer.task.date.strftime("%A, %d %b %Y %l:%M %p") %></p>
  <div id ="dashboard_tasks_buttons">
        <ul class="list-inline">
          <li class="list-item"><%= link_to offer, method: :delete, data: { confirm: 'Are you sure?' } do%><i class="fas fa-trash"></i><% end %></li>
      </ul>
    </div>
  </div>
    <%end %>
</div>
