<div class="card-product-two">
  <%= link_to offer_path(offer) do %>
    <div class="card-product-infos">
      <h2><%= offer.task.title %></h2>
      <p><%= offer.task.date.strftime("%A, %d %b %Y %l:%M %p") %></p>
  <%end %>
    <div id ="dashboard_tasks_buttons">
          <ul class="list-inline">
            <li class="list-item"><%= link_to offer, method: :delete, data: { confirm: 'Are you sure?' } do%><i class="fas fa-trash"></i><% end %></li>
        </ul>
      </div>
    </div>
    <!-- Defening the state of the offer: -->
     <%if offer.state == 'pending' %>
     <span class="dot-offer" style= "background-color: yellow">
      </span>
     <%elsif offer.state == 'booked' %>
     <span class="dot-offer" style= "background-color: green">
      </span>
      <%elsif offer.state == 'done' %>
      <span class="dot-offer" style= "background-color: black">
      <%elsif offer.state == 'rejected' %>
      <span class="dot-offer" style= "background-color: blue">
      <%else%>
      <span class="dot-offer" style= "background-color: red">
     <%end%>
</div>
