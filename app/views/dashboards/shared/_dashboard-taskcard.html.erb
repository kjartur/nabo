<div class="card-product-one">

  <!-- <img src="https://picsum.photos/200"> -->
  <div class="card-product-infos">
    <%= link_to task_path(task) do %>
      <h2><%= task.title %></h2>
      <p><%= task.date.strftime("%A, %d %b %Y %l:%M %p") %></p>
      <p>Coins: <%= task.amount_coins %></p>
    <%end %>
  </div>


  <div class="dashboard_all_offer_on_the_task_card">
    <div id="card-text">
      <p>You have <%= task.users.count %> offer<%if task.users.count == 1 %><%= ''%><%else%><%= 's' %><%end%>:</p>
    </div>
    <div class = "avatars_position">
    <% task.users.take(2).each do |user| %>
      <div id="avatar_card">
        <%= link_to cl_image_tag(user.avatar) %>
      </div>
      <% end %>
      <div class = "button">
        <h1>+</h1>
      </div>
    </div>
  </div>

  <div id ="dashboard_tasks_buttons">
    <ul class="list-inline">
      <li class="list-item"><%= link_to taskcomplete_path(task), method: "patch" do%><i class="far fa-check-circle"></i><% end %></li>
      <li class="list-item"><%= link_to edit_task_path(task) do %><i class="fas fa-pen"></i><% end %></li>
      <li class="list-item"><%= link_to task, method: :delete, data: { confirm: 'Are you sure?' } do %> <i class="fas fa-trash"></i><% end %></li>
    </ul>
  </div>

</div>


