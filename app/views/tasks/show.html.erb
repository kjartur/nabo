<div class="container-fluid new-design-show">
  <div class="row">
  <div class="col-6">
    <div class="card-show">

    <div class="card-show-icons">
        <div class="avatar-show">
          <% if @task.user.avatar? %>
            <img src="<%=@task.user.avatar%>" >
          <% else %>
            <img src="https://via.placeholder.com/150" >
          <% end %>
        </div>
      <div class="title-container">
          <p>Task:</p>
          <h1 class="color-blue"><%= @task[:title] %></h1>
      </div>
      </div>


      <div class="uploaded-photo">
          <div class="description-new">
            <h2><%= @task[:description] %></h2>
          </div>
          <div class="card-show-amount-coins">
          <h2>Coins:</h2>
          <br>
          <h2><%= @task[:amount_coins] %><h2>
        </div>
        <% if (@task[:photo] == nil) %>
        <img src="http://www.selfstoragespecialists.com/blog/wp-content/uploads/2016/03/bigstock-new-home-real-estate-moving-91410869.jpg">
        <% else %>
        <%= cl_image_tag(@task.photo) %>
        <% end %>
      </div>


      <div class="card-show-details">
        <h1>Task Details</h1>
             <hr class="divider-line">
        <div class="container">
          <div class="row">

            <div class="col-4">
              <h3>
                <div class="calendar-icon"><%= image_tag "calendar.svg"%>
                </div>
                <%= @task[:date].strftime("%A, %d %b %Y")%>
              </h3>
            </div>

            <div class="col-4">
              <h3>
                <div class="clock-icon"><%= image_tag "clock.svg"%></div>
                <%= @task[:date].strftime("%l:%M %p")%>
              </h3>
            </div>

            <div class="col-4">
              <h3>
                <div class="map-pin-icon"><%= image_tag "map-pin.svg"%></div>
                <%=@task[:address]%>, <%= @task[:post_code]%>
              </h3>
            </div>

          </div>
        </div>
      </div>

    </div>
    </div>

    <div class="col-6" style="padding-right: 0;">
      <div class="nav-container">
        <h1>These Are The Offers:</h1>
      <div class="offers">
        <div class="offer-avatars">
          <% @task.users.each do |user| %>
          <div class="avatar-show-nav">
            <%= link_to profile_path(user) do %>
              <% if user.avatar? %>
                <%= cl_image_tag(user.avatar) %>
              <% else %>
                 <img src="https://via.placeholder.com/120" >
              <% end %>
            <% end %>
          </div>
          <%end%>
        </div>
          <div class="offer-comments">
            <% @task.offers.each do |offer| %>
              <div class="offer-lockup">
                <div class="comments-boxes">
                  <p><%= offer.comments%></p>
                </div>
                  <div class="choose_me_btn">
                    <%= link_to 'Choose me!', acceptoffer_path(offer), method: "patch" %>
                  </div>
                </div>
            <%end%>
        </div>
      </div>
      <br>
      <br>
<!-- current user logic here -->
      <div class="nav-container-buttons">
        <% if (current_user.id == @task.user_id) %>
          <%= link_to 'Complete task', taskcomplete_path(@task), method: "patch", :class => "btn-flat-complete" %>
          <% else %>

           <%= simple_form_for [@task, @offer] do |f| %>
            <%= f.input :comments, label: 'I want to help!', placeholder: "Leave a comment or question" %>
            <%= f.submit "Create Offer", class: "btn btn-primary" %>
          <% end %>

        <% end %>
      </div>
<!-- end current user logic -->
    </div>
</div>
  </div>
</div>













