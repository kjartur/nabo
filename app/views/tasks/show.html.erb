<div class="card-show">
  <div class="card-show-top">
    <div class = "avatar">
      <img src="<%=current_user.avatar%>" class ="avatar-dashboard" >
    </div>

    <h1><%= @task[:title] %></h1>
    <br>
    <h2>Status: <%= @task[:completed] %></h2>

    <div class="card-show-amount-coins">
      <%= @task[:amount_coins] %>
    </div>


    <img src="http://www.selfstoragespecialists.com/blog/wp-content/uploads/2016/03/bigstock-new-home-real-estate-moving-91410869.jpg">
  </div>



  <div class="card-show-buttons">
    <div class="btn btn-primary">
      <%= link_to 'Offer to help', new_task_offer_path(@task), :class => "btn" %>
    </div>
    <div class="btn btn-primary">
      <%= link_to 'Complete task', taskcomplete_path(@task), method: "patch", :class => "btn" %>
    </div>
  </div>


    <div class="card-show-details">
      <h3><%= @task[:description] %></h3>
      <h3>Date: <%= @task[:date].strftime("%A, %d %b %Y %l:%M %p") %></h3>
      <h3>Address: <%= @task[:address] %></h3>
      <h3>Post code: <%= @task[:post_code] %></h3>
    </div>



</div>
