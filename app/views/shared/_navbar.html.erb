<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "Nebo-Logo-.svg"%>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">

    <ul class="navbar-nav mr-auto">

      <% if user_signed_in? %>

      <li class="btn btn-outline-light">
        <%= link_to "New task", new_task_path %>
      </li>
      <li class="nav-item active">
        <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <span class="email_color">&nbsp;&nbsp;|&nbsp;&nbsp;
        <strong><%= current_user.first_name %></strong>
        &nbsp;</span>
        <span class="color-dark-blue coin-number">
          <%= current_user.coins %> <span>Coins</span></span>
        <%= cl_image_tag current_user.avatar, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropd own-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "My Profile", pages_show_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </li>
        <% end %>
      </ul>

    </div>

  </div>
