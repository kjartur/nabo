<dir class="container">
  <h1>Home</h1>
  <br>
   <div class="container">
        <%= render 'shared/searchbar', task: @tasks %>
   </div>
  <br>
  <h1>My tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title:</th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <%@tasks.each do |task|%>
      <tr>
        <td><%= link_to task.title, task_path(task) %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Remove', task_path(task), method: :delete %></td>
      </tr>
      <%end%>
  </tbody>
</table>

  <%= link_to 'Add a task', new_task_path %>







